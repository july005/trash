
    <%= form_for @pin, html: { multipart: true } do |f| %>
    
  <% if @pin.errors.any? %>
    <div id="error_explanation">
      <!--<h2><font size="14" color="red"><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</h2>
    -->
      <h2><font size="14" color=#8470ff><strong>Oops!</strong></h2>
        <% @pin.errors.full_messages.each do |message| %>
        <%= image_tag 'girlhead.jpg' %><%= message %>
      <% end %> 
    </font>
     
    </div>
  <% end %>

 <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
